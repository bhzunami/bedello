

<header class="navbar navbar-default navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
       </a>
 
      <%= link_to "bedello.ch", root_path, class: "brand", id: "logo"%>
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
        <ul class="nav navbar-nav navbar-right pull-right">
          <% if admin? %>
          <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('.orders') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.newOrders'), orders_path() %></li>
                <li><%= link_to t('.archivedOrders'), archived_orders_path() %></li>
                <li><%= link_to t('.payments'), payments_path() %></li>
                <li><%= link_to t('.transports'), shipments_path() %></li>
              </ul> 
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('.products') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.newProduct'), new_product_path() %></li>
                <li><%= link_to t('.allProducts'), allProducts_path() %></li>
                <li><%= link_to t('.productProperty'), properties_path() %></li>
              </ul> 
          <% end %>
          <% if not admin? %>
          <li id="quantity_of_carts"><%= link_to t('.cart'), carts_path %></li>
          <% end %>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('.account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.profile'), edit_user_path(current_user) %></li>
                <li><%= link_to t('.settings'), website_setting_path(1) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('.signOut'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('.signIn'), signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>

<h1>Einstellungen zur Webseite</h1>
<%= simple_form_for(@websiteSettings, html: {class: 'form-horizontal' }) do |f| %>
  <% if @websiteSettings.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class="row-fluid">
    <div class="span7">
      <%= f.input :mailAddress, label: "E-Mail" %>
      <%= f.input :webstoreOpen, as: :date_picker, label: "Shop is offen ab" %>
      <%= f.input :webstoreClose, as: :date_picker, label: "Shop is geschlossen ab" %>
    </div>
  </div>
  <%= f.button :submit, "Speichern", class: "btn-success" %>
<% end %>


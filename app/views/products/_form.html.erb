<%= simple_form_for(@product, html: {class: 'form-horizontal' }) do |f| %>
  <% if @product.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class="row-fluid">
    <div class="span7">
      <h4>Informationen</h4>
      <hr class="featurette-divider">
      <%= f.input :title, label: "Name" %>
      <%= f.input :description, label: "Beschreibung", input_html: { class: "span12", rows: "5"} %>
      <%= f.input :productNr, as: :string, label: "Produkt Nr." %>
      <%= f.association :category, label: "Kategorie"%>
      <%= f.input :price, label: "Preis"%>
      <%= f.input :inStock, label: "auf Lager", input_html: {value: 1}%>

      <h4>Anzeigen</h4>
      <hr class="featurette-divider">
      <%= f.input :sale_start_date, as: :date_picker, label: "Start Verkauf" %>
      <%= f.input :sale_end_date, as: :date_picker, label: "Ende Verkauf" %>
      <%= f.input :isActivate, label: "Aktiv" %>

      <h4>Aktionen</h4>
      <hr class="featurette-divider">
      <%= f.input :promotionPrice, as: :decimal, label: "Aktionspreis" %>
      <%= f.input :promotionStartDate, as: :date_picker, label: "Aktionsstart" %>
      <%= f.input :promotionEndDate, as: :date_picker, label: "Aktionsende"%>
    </div>
    <div class="span5">
      <h4>Bild</h4>
      <hr class="featurette-divider">

      <% if @product.image? %>
        <%= image_tag @product.image.url(:small) %>
      <% end %>
      <%= f.file_field :image, label: "Bild" %>
      <h4>Eigenschaften</h4>
      <hr class="featurette-divider">
      <%= f.association :property, as: :radio_buttons, include_blank: true, label: "Eigenschaft" %>

    </div>
  </div>
  <%= f.button :submit, "Speichere Produkt", class: "btn-success" %>
<% end %>


<p>Erstellen eines neuen Produkt.</p>

<%= simple_form_for(@product, html: {class: 'form-horizontal' }) do |f| %>
  <% if @product.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class="row-fluid">
    <div class="span7">
      <h4>Information</h4>
      <hr class="featurette-divider">
      <%= f.input :title %>
      <%= f.input :description, input_html: { class: "span12", rows: "5"} %>
      <%= f.input :productNr, as: :string%>
      <%= f.association :category %>
      <%= f.input :price, label: "Price"%>
      <%= f.input :inStock, input_html: {value: 1}%>

      <h4>Visible options</h4>
      <hr class="featurette-divider">
      <%= f.input :sale_start_date, as: :date_picker%>
      <%= f.input :sale_end_date, as: :date_picker %>
      <%= f.input :isActivate %>

      <h4>Actions</h4>
      <hr class="featurette-divider">
      <%= f.input :promotionPrice, as: :decimal%>
      <%= f.input :promotionStartDate, as: :date_picker %>
      <%= f.input :promotionEndDate, as: :date_picker%>
    </div>
    <div class="span5">
      <h4>Images</h4>
      <hr class="featurette-divider">

      <% if @product.image? %>
        <%= image_tag @product.image.url(:small) %>
      <% end %>
      <%= f.file_field :image %>
    </div>
  </div>
  <%= f.button :submit, class: "btn-success" %>
<% end %>


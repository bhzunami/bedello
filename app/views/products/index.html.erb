<div class="row">
  <div class="span2">
    <%= render 'layouts/sidebar' %>
  </div>
  <div class="span10">
    <% if @products.any? %>
      <h1>All products of <category.name></h1>
      <% @products.each do |product| %>       
          <%= render product %>
      <% end %>
    <% else %>
      <div class="lead">
        <br />
        Leider keine Produkte für diese Kategorie gefunden.<br />
        Gehen sie zurück auf die <%= link_to "Startseite", root_path %>
      </div>
    <% end %>
  </div>
</div>

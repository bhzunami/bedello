<div class="row">
    <div class="span3">
      <%= image_tag product.image.url(:medium) %>
    </div>

    <div class="span5">
      <% if admin? && !product.isActivate %>
        <p class="alert alert-error">Product is inactive</p>
      <% end %>
      <% if admin? && !activeProduct?(product) %>
        <p class="alert">Product is not seasonally</p>
      <% end %>
      <% if isSale?(product) %>
        <p class="text-error"> <strong><%= number_with_precision promotionPercent(product), precision: 0%> % Reduktion</strong></p>
      <% end %>
      <small><%= product.productNr %></small>
      <h4><%= link_to product.title, product %></h4>
      <%= truncate(strip_tags(sanitize(product.description)),length: 500 ) %>
    </div>

    <div class="span2 pull-right">
      <p class="text-right">Verf√ºgbar: <%= product.inStock %></p>
     
      <% if isSale?(product) %>
        <p class="pull-left sale"><%= number_to_currency(product.price) %> CHF</p><p class="text-right"><strong><%= product.promotionPrice %> CHF </strong></p>
      <% else %>
        <p class="text-right"><%= product.price %> CHF </p>
      <% end %>

      <% if admin? %>
      <p class="pull-right">
        <%= link_to "Edit", edit_product_path(product), class: "btn" %>
        <%= link_to "Delete", product, method: :delete, data: {confirm: "You sure you want to delete #{product.title}"}, class: "btn btn-danger"  %>
      </p>
      <% else %>
        <%= form_tag({}, class: "form-inline addToCart") do %>
          <%= hidden_field_tag("id", value = product.id) %>   
          <label class="pull-right">
            <%= number_field_tag "quantity", value = 1, in: 1...11, class: "quantity_input"%>
            <%= submit_tag "to Cart", class: "btn btn-success btn_add", name: "add" %>
          </label>
        <% end %>
      <% end %>
    </div>
  </div>
  <hr>
<div class="row">
  <div class="span2">
    <%= render 'layouts/sidebar' %>
  </div>
  <div class="span10">
    <h1> <%= @product.title %></h1>
 
<div class="row">
  <div class="span3">
    <%= image_tag "logo/test_img.jpg" %>
  </div>

  <div class="span7">
    <% if admin? && !@product.isActivate %>
        <p class="alert alert-error">Product is inactive</p>
      <% end %>
      <% if admin? && !activeProduct?(@product) %>
        <p class="alert">Product is not seasonally</p>
      <% end %>
      <% if isSale?(@product) %>
        <p class="text-error"> <strong><%= number_with_precision promotionPercent(@product), precision: 0%> % Reduktion</strong></p>
      <% end %>
      <% if admin? %>
        <p><%= link_to "Edit", edit_product_path(@product), class: "btn pull-right" %></p>
      <% end %>
      <small><%= @product.productNr %></small>
      
    <h3>Beschreibung</h3>
    <%= sanitize(@product.description) %>
  </div>
</div>
<div class="control-group"></div>
<div class="row">
  <div class="span4">
    <p>Verf√ºgbar: <%= @product.inStock %></p>
    <% if isSale?(@product) %>
      <p class="pull-left sale"><%= @product.price %> CHF </p> <p class="text-middle"><%= @product.promotionPrice %> CHF</p>
    <% else %>
      <p><%= number_to_currency(@product.price) %> CHF </p>
    <% end %>
    <% if admin? %>
      <p>Verkaufen von: <%= l @product.saleStartDate %>  bis <%= l @product.salesEndDate %> </p>
    <% end %>    
    <button type="button" class="btn">In Stock</button>
  </div>
</div>
</div>
</div>

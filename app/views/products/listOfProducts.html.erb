<h2>Your cart</h2>
<div class="row">
  <div class="span7">
    <div id="cart_table">

      <table class="table  table-hover table-condensed">
        <thead>
          <tr>
            <th>ProductNr</th>
            <th>Name</th>
            <th>Menge</th>
            <th class="rightCell">Preis</th>
          </tr>
        </thead>
        <tbody>

          <% @cart.each do |p| %>
          <tr>
            <%= form_tag({}, class: "form-inline table_form update_cart") do %>
            <td><%= getProduct(p).productNr%></td>
            <td><%= getProduct(p).title %></td>
            <td>
              <!-- Form for edit quantity -->
              <%= hidden_field_tag("product_id", value = getProduct(p).id) %>
              <%= number_field_tag "quantity", value = getQuantity(p), in: 1...11, class: "quantity_input"%>
              <%= button_tag "update", class: "btn btn-mini btn_update", type: "button" %>
              <!-- End Form -->
            </td>
            <td class="rightCell"><%= number_to_currency(getPrizeOfOneProduct(p)) %></td>
            <td >
              <%= button_tag "delete", class: "btn btn-danger btn-small pull-right btn_delete", data: {confirm: 'Are you sure'}, type: "button" %></td>
              
            <% end %>
          </tr>
          <% end %>
          <tr>
            <td colspan="3"><strong>Total</strong></td>
            <td class="rightCell"><strong><%= number_to_currency(getTotalPrice(@cart)) %></strong></td>
            <td></td>
          </tr>
        </tbody>
      </table>

      <% if getTotalPrice(@cart) < 30 %>
        <%= button_tag "Order", class: "btn btn-success btn btn_order disabled pull-right", type: "button" %></td>
      <% else %> 
        <%= button_tag "Order", class: "btn btn-success btn btn_order pull-right", type: "button" %></td>
      <% end %>
      </div>
    </div>
    <%= render 'carts/conditions.html.erb' %>
  </div>
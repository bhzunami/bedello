<h1> Archivierte Bestellungen </h1>
<div class="row">
  <div class="span12">
    <% if @archived_orders.any? %>
    
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th></th>
          <th>Status</th>
          <th>Bestell-Nr.</th>
          <th>Name</th>
          <th>Bestelldatum</th>
          <th>Zahlungsart</th>
          <th>Bezahldatum</th>
          <th>Geliefert am</th>
          <th>Versandnummer</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @archived_orders.each do |order| %>
        <%= render order %>
      <% end %>
      </tbody>
    </table>
   <div class="span4 offset4">
    <%= will_paginate @archived_orders %>
    </div>
  <% else %>
    <p>Momentan keine archivierten Bestellungen</p> 
  <% end %>
</div>
</div>
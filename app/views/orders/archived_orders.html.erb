<h1> Archivierte Bestellungen </h1>
<div class="row">
  <div class="span12">
    <% if @archived_orders.any? %>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Anfrage am</th>
        </tr>
      </thead>
      <tbody>
      <% @archived_orders.each do |ao| %>
        <tr>
          <td> <%=link_to ao.id, ao %> 
          <td><%= ao.customer.firstname %> <%= ao.customer.lastname %></td>
          <td><%= ao.customer.email%></td>
          <td><%= ao.created_at.to_date.strftime("%d.%m.%Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
  <% end %>
  </div>
</div>
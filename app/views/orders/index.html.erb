<h1> Bestellungen </h1>
<div class="row">
  <div class="span12">
    <% if @pending_orders.any? %>
    <h4> Neue Bestellungen </h4>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Anfrage am</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @pending_orders.each do |po| %>
        <tr>
          <td> <%=link_to po.id, po %> 
          <td><%= po.customer.firstname %> <%= po.customer.lastname %></td>
          <td><%= po.customer.email%></td>
          <td><%= po.created_at.to_date.strftime("%d.%m.%Y") %></td>
          <td><%= link_to "Akzeptieren", order_accept_path(po, id: po.id), {method: :post, class: "btn btn-mini btn-success" }%>
            <%= link_to "Ablehnen", order_reject_path(po, id: po.id), {method: :post, class: "btn btn-mini btn-danger", confirm: "Bestellung wirklich ablehnen" }%></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
  <% end %>

  <% if @accepted_orders.any? %>
    <h4> Akzeptierte Bestellungen </h4>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Anfrage am</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @accepted_orders.each do |ao| %>
        <tr>
          <td> <%=link_to ao.id, ao %> 
          <td><%= ao.customer.firstname %> <%= ao.customer.lastname %></td>
          <td><%= ao.customer.email%></td>
          <td><%= ao.created_at.to_date.strftime("%d.%m.%Y") %></td>
          <td><%= link_to "Archivieren", order_archive_path(ao, id: ao.id), {method: :post, class: "btn btn-mini btn-info" }%></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
    <% end %>

    <% if @rejected_orders.any? %>
    <h4> Abgelehnte Bestellungen </h4>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Anfrage am</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @rejected_orders.each do |ro| %>
        <tr>
          <td> <%=link_to ro.id, ro %> 
          <td><%= ro.customer.firstname %> <%= ro.customer.lastname %></td>
          <td><%= ro.customer.email%></td>
          <td><%= ro.created_at.to_date.strftime("%d.%m.%Y") %></td>
          <td><%= link_to "Archivieren", order_archive_path(ro, id: ro.id), {method: :post, class: "btn btn-mini btn-info" }%></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
    <% end %>
  </div>
</div>
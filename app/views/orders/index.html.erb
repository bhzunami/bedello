<h1>Bestellungen </h1>
<div class="row">
  <div class="span12">
    <% if @orders.any? %>
    <h4>Neue Bestellungen</h4>
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th></th>
          <th>Status</th>
          <th>Bestell-Nr.</th>
          <th>Name</th>
          <th>Bestelldatum</th>
          <th>Zahlungsart</th>
          <th>Bezahldatum</th>
          <th>Geliefert am</th>
          <th>Versandnummer</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <%= render order %>
      <% end %>
    </tbody>
  </table> 
  <% end %>
  </div>
  <div class="span12">
  <% if @completed_orders.any? %>
  <h4>Abgeschlossene Bestellungen</h4>
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th></th>
          <th>Status</th>
          <th>Bestell-Nr.</th>
          <th>Name</th>
          <th>Bestelldatum</th>
          <th>Zahlungsart</th>
          <th>Bezahldatum</th>
          <th>Geliefert am</th>
          <th>Versandnummer</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @completed_orders.each do |order| %>
        <%= render order %>
      <% end %>
    </tbody>
  </table> 
  <% end %>
  </div>

</div>
<% provide(:title, 'Home') %>
<div class="row">
	<div class="span2">
		<%= render 'layouts/sidebar' %>
	</div>
	<div class="span9">
<h1> Bedello Pralinen </h1>

<% if not isStoreOpen? %>
<p class="alert alert-error">Der Shop ist momentan nicht <strong>aktiv</strong>. Er öffnet wieder am <%= @webstore.webstoreOpen.strftime("%m.%d.%Y") %>. <br /> Sie können sich trotzdem gerne im Shop umschauen.</p>
<% end %>
<%= image_tag "logo/bedello_shop_titelbild.jpg" %>

<% if not isStoreOpen? %>
	<center><%= image_tag "logo/shopClose.png" %></center>
<% else %>

	<div class="row">
	<br /><br />
	<% @products.each do |p| %>
		<div class="span3">
			<%= image_tag p.image.url(:small) %>
			<p>
				<h4><%= link_to p.title, p %></h4>
				<%= truncate(strip_tags(sanitize(p.description)),length: 200) %>
			</p>
		</div>
	<% end %>
	</div>
<% end %>
</div>
</div>
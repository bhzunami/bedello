<%= form_for(@property, html: {class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <h5>Eigenschaft</h5>
    <hr class="featurette-divider">
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: :name %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control', placeholder: :description %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <a href="" class="add float-right btn btn-small btn-success">+ Neue Option</a>
      </div>
    </div>
    <h5>Optionen</h5>
    <hr class="featurette-divider">
    <div class="items">
    <%= f.nested_fields_for :propertyItems do |f| %>
      <fieldset class="item">
      	<div class="form-row">
          <div class="form-group col-md-6">
        	  <%= f.label :name %>
        		<%= f.text_field :name, class: 'form-control', placeholder: :name %>
        	</div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
        	  <%= f.label :description%>
        		<%= f.text_field :description, class: 'form-control', placeholder: :description %>
        	</div>
        </div>
        <a href="#" class="remove btn btn-small btn-danger">LÃ¶sche Option</a>
       
        <%= f.hidden_field :id %>
        <%= f.hidden_field :_destroy %>
      </fieldset>
      <hr class="featurette-divider">
    <% end %>
  </div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.submit "Speichern", class: "btn col-md-4 float-right btn-success"%>
    <%= link_to 'Cancel', properties_path, class: "btn btn-outline-danger" %>
  </div>
</div>
<% end %>


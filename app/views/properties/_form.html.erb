<%= form_for(@property, html: {class: 'form-horizontal' }) do |f| %>
<% if @property.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class="row">
    <div class="span12">
      <h4>Eigenschaft</h4>
      <hr class="featurette-divider">
      <div class="control-group">
      	<%= f.label :name, class: "control-label" %>
      	<div class="controls">
      		<%= f.text_field :name %>
      	</div>
      </div>
      <div class="control-group">
      	<%= f.label :description, "Beschreibung", class: "control-label" %>
      	<div class="controls">
      		<%= f.text_field :description %>
      	</div>
      </div>
    </div>
  </div>
    <div class="row-fluid">
		<div class="span12">
		<a href="" class="add pull-right btn btn-small btn-success">+ Neue Option</a>
      <h4>Optionen</h4>
      <hr class="featurette-divider">
      <div class="items">
    <%= f.nested_fields_for :propertyItems do |f| %>
      <fieldset class="item">
      	<div class="control-group">
        	<%= f.label :name, class: "control-label" %>
        	<div class="controls">
        		<%= f.text_field :name %>
        	</div>
        	<%= f.label :description, "Beschreibung", class: "control-label" %>
        	<div class="controls">
        		<%= f.text_field :description %>
        	</div>
 </div>
        <a href="#" class="remove btn btn-small btn-danger">LÃ¶sche Option</a>
       
        <%= f.hidden_field :id %>
        <%= f.hidden_field :_destroy %>
      </fieldset>
      <hr class="featurette-divider">
    <% end %>
  </div>
  
<%= f.submit "Speichern", class: "btn-success btn"%>
<% end %>


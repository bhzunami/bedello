<h1>Eigenschaften</h1>
<div class="row">
  <div class="span12">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Beschreibung</th>
          <th>Optionen</th>
          <th>Angelegt am</th>
        </tr>
      </thead>
      <tbody>
      <% @properties.each do |p| %>
      <tr>
        <td><%= link_to p.name, p %> </td>
        <td><%= p.description %></td>
        <td>
          <% p.propertyItems.each do |i| %>
            <%= i.name %> <br />
          <% end %>
        </td>
        <td><%= p.created_at.to_formatted_s(:long)  %></td>
        <td> <%= link_to "Edit", edit_property_path(p), class: "btn btn-mini" %></td>
        <td><%= link_to "LÃ¶schen", p, confirm: 'Bist du sicher?', method: :delete, class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to "New Eigenschaft", new_property_path, class: "btn btn-mini" %>
  </div>
</div>
  
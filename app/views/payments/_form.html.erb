<%= form_for(@payment) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: :name %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :short_name %>
      <%= f.text_field :short_name, class: 'form-control', placeholder: :short_name %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :costs %>
      <%= f.number_field :costs, class: 'form-control', placeholder: :costs %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.submit "Speichern", class: "btn col-md-4 float-right btn-success"%>
      <%= link_to 'Cancel', payments_path, class: "btn btn-outline-danger" %>
    </div>
  </div>

<% end %>
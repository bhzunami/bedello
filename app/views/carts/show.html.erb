<h2>Your Pragmatic Cart</h2>
<% if @cart.line_items.any? %>

<table>
	<% @cart.line_items.each do |item| %> 
	<tr>
		<td><%= item.quantity %> &times; </td>
		<td><%= item.product.title %></td>
		<td><%= number_to_currency(item.total_price) %></td>
		<td><%= button_to "delete", item, method: :delete, class: "btn btn-danger btn-small", confirm: "are you ready" %></td>
	</tr>
	<% end %>

	<tr>
		<td colspan="2">Total</td>
		<td><%= number_to_currency(@cart.total_price) %>
	</tr>
</table>

<%= button_to 'Empty cart', @cart, method: :delete, class: "btn btn-danger", confirm: 'Are you sure?' %>
<% else %>
No item in your cart!
<% end %>



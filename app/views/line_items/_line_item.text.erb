<% if line_item.product.property_id? %>
  <%= sprintf("%2d x %s (%s) à %s", line_item.quantity, line_item.product.title, line_item.propertyItem.name, number_to_currency(getProductPrice(line_item.product)) ) %>
<% else %>
  <%= sprintf("%2d x %s %s à %s", line_item.quantity, line_item.product.title, "", number_to_currency(getProductPrice(line_item.product)) ) %>
<% end %>

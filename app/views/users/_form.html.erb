<%= simple_form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: "Confirmation" %>

   <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>

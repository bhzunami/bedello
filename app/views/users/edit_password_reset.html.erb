<div class="row justify-content-center">
	<div class="col-6">
  <h3 class="h3 mb-3 font-weight-normal text-center">Passwort ändern</h3>
  <p>Setzte dein neues Passwort</p>
  <%= form_for(@user, url: url_for(action: 'update_password_reset', controller: 'users', class: "form-signin"), method: "post") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="form-group">
      <%= f.label :password, nil, class: "sr-only"  %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
			</div>

      <div class="form-group">
      <%= f.label :password_confirmation, "Password wiederholen", class: "sr-only" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password bestätigen"  %>
      </div>

      <%= f.submit "Passwort speichern", class: "btn btn-block btn-large btn-primary" %>
    <% end %>
  </div>
</div>

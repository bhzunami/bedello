<%= link_to 'Cancel', categories_path, class: "btn btn-danger pull-right" %>

<p>Erstellen eine neue Kategorie.</p>
<%= simple_form_for(@category, html: {class: 'form-horizontal' }) do |f| %>
  <% if @category.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>

  <%= f.input :name, label: "Name" %>
  <%= f.input :description, label: "Beschreibung", input_html: { class: "span6", rows: "5"}  %>
  <% if @category.id %>
    <%= f.input :category_order, label: "Reihenfolge" %>
  <% else %>
    <%= f.input :category_order, label: "Reihenfolge", input_html: {value: "#{lastOrder}"}%>
  <% end %>

   <%= f.button :submit %>

<% end %>